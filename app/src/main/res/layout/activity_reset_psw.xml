<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#222222"
    >

    <include
        android:id="@+id/include9"
        layout="@layout/include_top_toolbar"/>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#2A2A2A"
        app:layout_constraintTop_toBottomOf="@+id/include9">

        <TextView
            android:text="Select country / region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:paddingBottom="18dp"
            android:paddingTop="18dp"
            android:textColor="@color/white"
            android:textSize="16sp"/>



        <TextView
            android:drawableEnd="@drawable/btn_forward"
            android:id="@+id/tv_select_contry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:text="+86"
            android:gravity="end|center_vertical"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="14sp"/>



    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2A2A2A"
        app:layout_constraintTop_toBottomOf="@+id/ll2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="Verification Code"
            android:textColor="@color/white"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/et_code"
            android:layout_marginEnd="6dp"
            android:layout_width="wrap_content"
            android:gravity="end|center_vertical"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:ems="10"
            android:hint="Enter the Code"
            android:inputType="textPassword"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textColorHint="#888888"
            android:textSize="14sp"
            />

        <TextView
            android:layout_marginEnd="17dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:id="@+id/tv_get_vcode"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/bg_get_vcode"
            android:text="Click to get"
            android:textColor="@color/black"
            android:textColorHint="#888888"
            android:textSize="12sp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2A2A2A"
        app:layout_constraintTop_toBottomOf="@+id/ll1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:paddingBottom="18dp"
            android:paddingTop="18dp"
            android:text="Mobile Number"
            android:textColor="@color/white"
            android:textSize="16sp"/>


        <EditText
            android:layout_marginEnd="26dp"
            android:layout_width="match_parent"
            android:gravity="end|center_vertical"
            android:layout_weight="1"
            android:id="@+id/et_mobile"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:ems="10"
            android:hint="Enter the Mobile Num"
            android:inputType="textPassword"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textColorHint="#888888"
            android:textSize="14sp"
        />

    </LinearLayout>



    <include
        android:id="@+id/submit"
        layout="@layout/include_submit"/>


</android.support.constraint.ConstraintLayout>